generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model About {
  id          String @id
  title       Json
  description Json
}

model Blog {
  id          String @id
  title       Json
  description Json
  image       String
  date        String
  author      String
  category    String
  attachment  String
}

model Contact {
  id      String   @id
  phone   String[]
  email   String[]
  address String[]
  fb      String
  tw      String
  insta   String
  linked  String
  snap    String
}

model Hero {
  id       String @id
  title    Json
  subtitle Json
  image    String
}

model NumbersInfo {
  id          String @id
  service     Int
  customer    Int
  takeService Int
}

model Qa {
  id       String @id
  question Json
  answer   Json
}

model Service {
  id          String @id
  title       Json
  description Json
  favoriteNum Int    @unique
}

model User {
  id    String  @id
  name  String?
  email String? @unique
}
